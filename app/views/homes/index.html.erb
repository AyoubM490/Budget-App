<section class="container-fluid p-0">
    <div class="home d-flex flex-column justify-content-between">
        <div class="text-center">
            <div>
                <%= image_tag('Gosave.png', class: 'logo thumbnail icon-img') %>
            </div>
            <h1 class="logo-text">GoSave</h1>
        </div>
        <div class="text-center">
            <p>Welcome to a world of savings</p>
            <p>Spend with a smile</p>
        </div>
        <div class="home-actions">
            <div class="text-center border border-white">
                <%= link_to "Log in", new_user_session_path, class: "text-decoration-none p-2 text-white new-btn" %>
            </div>
            <div class="text-center border border-white">
                <%= link_to "Sign up", new_user_registration_path, class: "text-decoration-none p-2 text-white new-btn" %>
            </div>
        </div>
    </div>
</section>
